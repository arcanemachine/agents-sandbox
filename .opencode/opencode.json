{
  "$schema": "https://opencode.ai/config.json",
  "model": "opencode/kimi-k2.5-free",
  "experimental": {
    "disable_paste_summary": true
  },
  "mode": {
    "simple-agent": {
      "prompt": "{file:./prompts/simple-agent.txt}"
    }
  },
  "provider": {
    "llamacpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama.cpp (local)",
      "options": {
        "baseURL": "http://192.168.1.135:8080/v1"
      },
      "models": {
        "Qwen3-Coder-Next-Q4_0.gguf": {
          "name": "Qwen3-Coder-Next-Q4_0.gguf",
          "limit": { "context": 16000, "output": 4000 }
        },
      }
    },
    "nanogpt-subscription": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "NanoGPT (Subscription)",
      "options": {
        "baseURL": "https://nano-gpt.com/api/subscription/v1"
      },
      "models": {
        "minimax/minimax-m2.5": {
          "name": "Minimax M2.5",
          "limit": { "context": 200000, "output": 13000 }
        },
        "mistralai/mistral-large-3-675b-instruct-2512": {
          "name": "Mistral Large 3 675B Instruct",
          "limit": { "context": 260000, "output": 256000 }
        },
        "moonshotai/kimi-k2.5:thinking": {
          "name": "Kimi K2.5 (Thinking)",
          "limit": { "context": 200000, "output": 32000 }
        },
        "qwen/qwen3-coder-next": {
          "name": "Qwen3 Coder Next",
          "limit": { "context": 256000, "output": 64000 }
        },
        "stepfun-ai/step-3.5-flash:thinking": {
          "name": "Step 3.5 Flash (Thinking)",
          "limit": { "context": 256000, "output": 32000 }
        },
        "zai-org/glm-5:thinking": {
          "name": "GLM 5 (Thinking)",
          "limit": { "context": 200000, "output": 128000 }
        }
      }
    },
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://172.16.0.1:11434/v1"
      },
      "models": {
        "qwen3-coder-30b-a3b-instruct:latest": {
          "name": "Qwen3 Coder 30B",
          "supportsTools": true,
          "limit": { "context": 16000, "output": 8000 }
        },
        "qwen3-4b:latest": {
          "name": "Qwen3 4B",
          "supportsTools": true,
          "limit": { "context": 64000, "output": 16000 }
        },
        "glm-4.7-flash:latest": {
          "name": "GLM 4.7 Flash",
          "supportsTools": true
        }
      }
    },
    "openrouter-free": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenRouter (Free)",
      "options": {
        "baseURL": "https://openrouter.ai/api/v1"
      },
      "models": {
        "openrouter/pony-alpha": {
          "limit": {
            "context": 200000,
            "output": 120000
          }
        }
      }
    }
  }
}
